<% content_for :title, @page.title %>

<% content_for :page_submenu do %>
  <% if can? :edit, @page or can? :list, @page %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" >Page<span class="caret"></span></a>
      <ul class="dropdown-menu admin-links">
        <% if can? :edit, @page %>
          <li class="page-edit"><%= link_to 'Edit', edit_page_path %></li>
        <% end %>
        <% if can? :index, Page %>
          <li class="page-index"><%= link_to 'List Pages', pages_path %></li>
        <% end %>
      </ul>
    </li>
  <% end %>
<% end %>

<% if @page.office %>
  <%= render partial: "office", locals: {office: @page.office} %>
<% end %>

<div class="page_body">
  <%== @page.body %>
</div>
