<%= render partial: 'heraldry', locals: {heraldic_object: @recipient} %>

<h3><%= @recipient %></h3>

<% if @recipient.pronouns %>
  <p><b>Preferred Pronouns:</b> <%= @recipient.pronouns %></p>
<% end %>

<% if @recipient.heraldry_blazon %>
  <p><i><%= @recipient.heraldry_blazon %></i></p>
<% end %>

<%= render partial: 'awards_table', locals: {recipient: @recipient} %>

<% if can? :create, Awarding  %>
  <%= link_to 'Add Award', new_awarding_path(recipient_id: @recipient) %> | 
<% end %>
<% if can? :edit, @recipient %>
  <%= link_to 'Edit', edit_recipient_path(@recipient) %>
<% end %>

<p><%= render 'update_oop' %></p>

