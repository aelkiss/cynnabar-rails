      <td>
        <%= link_to user.email, user_contact_path(user) %>
      </td>
      <td>
        <%= user.name %>
      </td>
      <td>
        <% if user.recipient %>
          <%= link_to user.recipient.to_s, recipient_path(user.recipient) %>
        <% end %>
      </td>
      <td>
        <%= link_to 'Edit', edit_user_path(user) %>
      </td>
      <td>
        <%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
